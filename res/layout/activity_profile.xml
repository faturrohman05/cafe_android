<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <EditText
        android:id="@+id/etNim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvSoftDrink"
        android:layout_below="@+id/tvSoftDrink"
        android:ems="10"
        android:inputType="numberSigned" />

    <EditText
        android:id="@+id/etKelas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvAirMineral"
        android:layout_below="@+id/tvAirMineral"
        android:layout_marginTop="16dp"
        android:ems="10" />

    <TextView
        android:id="@+id/tvSoftDrink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etKelas"
        android:layout_below="@+id/etKelas"
        android:layout_marginTop="16dp"
        android:text="NPM :" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="35dp"
        android:layout_toRightOf="@+id/tvSoftDrink"
        android:text="Data diri :"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/etNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/tvAirMineral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etNama"
        android:layout_below="@+id/etNama"
        android:layout_marginTop="16dp"
        android:text="Kelas :" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etNama"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="14dp"
        android:text="Nama : " />

    <Button
        android:id="@+id/bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etNim"
        android:layout_below="@+id/etNim"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="27dp"
        android:text="Isikan data" />

    <Button
        android:id="@+id/btMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bt"
        android:layout_alignBottom="@+id/bt"
        android:layout_toRightOf="@+id/textView2"
        android:text="Ke Menu" />

</RelativeLayout>

